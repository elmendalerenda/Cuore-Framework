var SwitchButtonRenderer = new Class({
    
    Extends: ButtonRenderer,
    OFF: "off",
	  ON: "on",
  
	
	  
	  putText:function(component)
	  {
	    var text = component.isActive() ?  component.activeLabel : component.inactiveLabel;
	    
	    if (!$defined(text)){
	      text = component.isActive() ?  component.activeKey : component.inactiveKey;
      }
      this.span.set("text", text);		
	  },
	  
    setClassCSS: function(component)
    {
      this.parent(component);
      
      if(!$defined(this.panel)) return;
      var newClass = this.OFF;
      var oldClass = this.ON;
      
      if(component.active)
      {
        newClass = this.ON;
        oldClass = this.OFF;
      }
  
      this.addClass(newClass);
      this.removeClass(oldClass);
      
    },
	
});
