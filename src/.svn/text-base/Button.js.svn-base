var Button = new Class({
	
	Extends: Component,
	typeName: "Button",
	text:"CLICK!",
	DOMClass: "button",
	BUTTONSERVICE: "BUTTON",
	data: undefined,
	procedure:"aButton",
	service:"BUTTON",
	buttonName:"aButton",
	enabled:true,
	asynchronous: false,
	
	initialize: function(buttonName, key)
	{
		this.parent();
		this.renderer = new ButtonRenderer();
		this.initializeExecutionContext(this.BUTTONSERVICE, buttonName);
		this.buttonName= this.procedure;
		this.setI18NKey(key);
	},
	
	
	click: function()
	{
		service = this.getService();
		if(service)
		{
			service.execute(this.buttonName, this.data);
		}
	},
	
	disable: function()
	{
		this.enabled = false;
		this.updateRender();
	},
	
	enable: function()
	{
		this.enabled = true;
		this.updateRender();
	},
	
	
	getButtonName: function(){
	  return this.buttonName;
	},
	
	setData: function(data)
	{
		this.data = data;
	},
	
	isEnable:function()
	{
		return this.enabled;
	}
});
